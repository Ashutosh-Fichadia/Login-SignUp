<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C3464"
    tools:context=".MainActivity"

    >
    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/btnmid"
        android:gravity="center"
        android:text="+"
        android:textColor="#fff"
        android:textSize="50dp"


        ></Button>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="255dp"

        android:layout_toRightOf="@id/btn2"
        android:background="@drawable/btnmid"
        android:gravity="center"
        android:text="-"
        android:textColor="#fff"
        android:textSize="50dp"


        ></Button>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:paddingTop="35dp"
        android:paddingBottom="85dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnmid"
            android:text="Button 1"
            android:textColor="#fff"
            android:textSize="30dp"


            ></Button>

        <TextView


            android:id="@+id/tv1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="This Is sample Layout For Practice"
            android:textColor="#fff"
            android:textSize="30dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl1"
        android:background="@drawable/rounded"
        android:id="@+id/rl2"
        >


        <Button
            android:id="@+id/btndown1"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_above="@id/btndown4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btndown"
            android:padding="5dp"
            android:text="Login"
            android:textColor="#fff"

            android:textSize="30dp" />

        <Button
            android:id="@+id/btndown2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/btndown1"
            android:background="@drawable/btndown"
            android:padding="5dp"
            android:text="Insta Rev"
            android:textColor="#fff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btndown3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btndown2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/btndown1"
            android:background="@drawable/btndown"
            android:padding="5dp"
            android:text="Insta"
            android:textColor="#fff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btndown4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/btndown3"
            android:background="@drawable/btndown"
            android:padding="5dp"
            android:text="Button 4"
            android:textColor="#fff"
            android:textSize="30dp" />
    </RelativeLayout>
</RelativeLayout>