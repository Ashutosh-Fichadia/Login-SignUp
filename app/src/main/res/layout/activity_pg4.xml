<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pg4"
    android:padding="15dp"
    android:background="#1C3464"
    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bike"

        android:tint="#fff"
        android:id="@+id/imgvv"
        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:id="@+id/tv1"
        android:layout_toRightOf="@id/imgvv"
        android:text="Ashutosh Fichadia"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"


        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="top"
        android:id="@+id/tv2"
        android:layout_toRightOf="@id/imgvv"
        android:layout_below="@id/tv1"
        android:text="ashu011699"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"

        ></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Edit Profile"
        android:layout_toRightOf="@id/imgvv"
        android:layout_below="@id/tv2"
        android:layout_margin="5dp"

        android:background="@drawable/btnmid"
        android:textColor="#fff"
        android:textSize="20dp"
        ></Button>

    <Button
        android:id="@+id/home1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        android:background="@drawable/btnmid"
        android:text="Go to Home Page"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_marginTop="10dp"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home1"
        android:layout_below="@id/imgvv"
        android:gravity="center"
        android:text="This is Body"
        android:layout_marginTop="5dp"
        android:background="@drawable/rev_rounded"
        android:id="@+id/tv3"
        android:textSize="30dp">

    </TextView>

</RelativeLayout>